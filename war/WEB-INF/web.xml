<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>reversi-shifter</servlet-name>
        <servlet-class>ReversiPlayServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>reversi-shifter</servlet-name>
        <url-pattern>/shifter/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>reversi-peer</servlet-name>
        <servlet-class>ReversiPeerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>reversi-peer</servlet-name>
        <url-pattern>/peer/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>reversi-channel</servlet-name>
        <servlet-class>ReversiChannelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>reversi-channel</servlet-name>
        <url-pattern>/channel</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>reversi.html</welcome-file>
    </welcome-file-list>
</web-app>
